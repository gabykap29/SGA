# Variables de entorno para el proyecto SGA
# Copiar este archivo como .env y ajustar los valores

# Configuración de la Base de Datos
DATABASE_HOST=db
DATABASE_PORT=3306
DATABASE_NAME=sga_db
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_URL=mysql+pymysql://user:password@db:3306/sga_db

# Configuración de la Aplicación Backend
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=production

# Configuración del Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=production

# Configuración de MariaDB (para docker-compose)
MARIADB_ROOT_PASSWORD=rootpassword
MARIADB_DATABASE=sga_db
MARIADB_USER=user
MARIADB_PASSWORD=password

# Configuración de Archivos
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Configuración de Nginx
NGINX_PORT=8080

# Configuración de Red
FRONTEND_PORT=3000
BACKEND_PORT=8000
DB_PORT=3306